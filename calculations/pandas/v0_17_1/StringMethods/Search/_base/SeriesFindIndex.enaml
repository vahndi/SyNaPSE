class SeriesFindIndex_UI(SeriesStringMethod_UI, FindIndex_UI):

    pass



class SeriesFindIndex_Model(SeriesStringMethod_Model, FindIndex_Model):


    calc_name = 'Find Index'


    def setInputs(self, series):

        self._series = series
        self.ui_args = {}
        self.uiModel = SeriesFindIndex_UI(** self.ui_args)



enamldef SeriesFindIndex_View(SeriesStringMethod_View): me:

    attr model

    Form:

        Label:
            text = 'Substring'
            tool_tip = model.sub_tooltip
        Field:
            text := model.sub
            tool_tip = me.model.sub_tooltip

        Label:
            text = 'Start'
            tool_tip = model.start_tooltip
        IntField:
            value := model.start
            tool_tip = me.model.start_tooltip

        CheckBox:
            tool_tip = model.end_tooltip
            text = 'End'
            checked := model.use_end
        Label:
            text = 'N/A'
            visible << not model.use_end
        IntField:
            value := model.end
            visible << model.use_end
            tool_tip = me.model.end_tooltip